<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextToSpeechAcctivity">

    <TextView
        android:id="@+id/textLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/thirty_two_dp"
        android:gravity="center"
        android:text="Hello world!, This is a demo for Text to Speech:"
        android:textColor="@color/lightGrey"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textToSpeechValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/eight_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:hint="Enter text"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:imeOptions="normal"
        android:paddingVertical="@dimen/sixteen_dp"
        android:textColorHint="@color/lightGrey"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLabel" />

    <Button
        android:id="@+id/textToSpeechButtom"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:layout_marginHorizontal="@dimen/eight_dp"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:paddingVertical="@dimen/sixteen_dp"
        android:text="Press to speak to entered text"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_sp"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="@dimen/ten_dp"
        app:iconGravity="start"
        app:layout_constraintTop_toBottomOf="@+id/textToSpeechValue"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>